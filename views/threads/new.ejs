<% include ../partials/header %>

<div class="row justify-content-center">
	<div class="col-md-6">
		<h1>Start a New Thread at <%= forum.name %></h1>
		<form action="/forums/<%= forum._id %>/threads" method="POST">
			<div class="form-group">
				<label for="title-field">Title (No longer than 75 characters)</label>
				<input id="title-field" class="form-control" type="text" name="thread[title]" maxlength="75" placeholder="Enter title" autofocus>
			</div>
			<div class="form-group">
				<label for="message-field">First Post Message (No longer than 2000 characters)</label>
				<textarea id="message-field" class="form-control" name="post[message]" maxlength="2000" rows="8"></textarea>
			</div>
			<% if(currentUser && currentUser.isAdmin) { %>
				<div class="form-check">
					<input id="lock-field" class="form-check-input" type="checkbox" name="lock" value="true">
					<label class="form-check-label" for="lock-field">Admin: Start This Thread Locked (Restrict post creation to admins)</label>
				</div>
			<% } %>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
		<a class="btn btn-success" href="/forums/<%= forum._id %>/1">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>