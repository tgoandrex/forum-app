<% include ../partials/header %>

<div class="row justify-content-center">
	<div class="col-md-6">
		<h1>Create a New Post at <%= thread.title %></h1>
		<form action="/forums/<%= forum._id %>/threads/<%= thread._id %>/posts" method="POST">
			<div class="form-group">
				<label for="message-field">Message (No longer than 2000 characters)</label>
				<textarea id="message-field" class="form-control" name="post[message]" maxlength="2000" rows="8" autofocus></textarea>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
		<a class="btn btn-success" href="/forums/<%= forum._id %>/threads/<%= thread._id %>/1">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>