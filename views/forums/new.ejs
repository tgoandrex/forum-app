<% include ../partials/header %>

<div class="row justify-content-center">
	<div class="col-md-6">
		<h1>Create a New Forum</h1>
		<form action="/forums" method="POST">
			<div class="form-group">
				<label for="name-field">Name</label>
				<input id="name-field" class="form-control" type="text" name="name" placeholder="Enter name" required autofocus>
			</div>
			<div class="form-group">
				<label for="description-field">Description (No longer than 100 characters)</label>
				<input id="description-field" class="form-control" type="text" name="description" maxlength="100" placeholder="Enter description" required>
			</div>
			<div class="form-check">
				<input id="lock-field" class="form-check-input" type="checkbox" name="lock" value="true">
				<label class="form-check-label" for="lock-field">Start This Forum Locked (Restrict thread creation to admins)</label>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
		<a class="btn btn-success" href="/forums/">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>