<% include ../partials/header %>

<div class="row justify-content-center">
	<div class="col-md-6">
		<h1>Edit Forum</h1>
		<form action="/forums/<%= forum._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="description-field">Description (No longer than 100 characters)</label>
                <input id="description-field" class="form-control" type="text" name="forum[description]" maxlength="100" value="<%= forum.description %>" required autofocus>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
        </form>
        <a class="btn btn-success" href="/forums/">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>